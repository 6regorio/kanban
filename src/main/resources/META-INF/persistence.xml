<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="KanbanUnit">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.plkpiotr.kanban.api.Company</class>
        <class>com.plkpiotr.kanban.api.Employee</class>
        <class>com.plkpiotr.kanban.api.Project</class>
        <class>com.plkpiotr.kanban.api.Task</class>

        <properties>
            <property name="hibernate.connection.url"
                      value="jdbc:postgresql://localhost:5432/Kanban?characterEncoding=UTF-8"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="password"/>
            <property name="hibernate.connection.dialect" value="org.hibernate.dialect.PostgreSQL94Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>

    </persistence-unit>

</persistence>
